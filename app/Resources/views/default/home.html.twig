{% extends 'base.html.twig' %}

{% block body %}
    {% for post in posts %}
        <div class="card mb-4">
            <div class="card-body">
                <h2 class="card-title">{{ post.getTitle() }}</h2>
                <p class="card-text article-text">{{ post.getContent() }}</p>
                <a class="btn btn-primary" href="post/{{ post.getAliasUrl() }}">Details</a>
            </div>
            <div class="card-footer text-muted">
                Posted on {{ post.getPublished() | date('d-m-Y h:i:s')}}
            </div>
        </div>
    {% endfor %}

    {% form_theme form 'form/field.html.twig' %}
    {% block form_row %}
        {% spaceless %}
            <div class="form_row">
                {{ form(form) }}
            </div>
        {% endspaceless %}
    {% endblock form_row %}

    <hr>
    <!-- Pager -->
    <div class="clearfix">
        <a class="btn btn-primary float-right" href="{{ path('homepage', {'page' :  page + 1} ) }} ">Older Posts </a>
    </div>

    <script>
        function OlderPosts() {
            let x = {{ page }};
             console.log(x);

        }
    </script>

    <hr>

    {% block javascripts %}
    {% endblock %}
{% endblock %}
