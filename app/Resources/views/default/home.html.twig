{% extends 'base.html.twig' %}

{% block body %}
    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success">
            {% for success_message in app.session.flashBag.get('success') %}
                {{ success_message | trans }}
            {% endfor %}
        </div>
    {% endif %}

    {% if app.session.flashBag.has('error') %}
        <div class="alert alert-danger">
            {% for error_message in app.session.flashBag.get('error') %}
                {{ error_message | trans }}
            {% endfor %}
        </div>
    {% endif %}


    {% for post in posts %}
        <div class="container">
            <div class="card mb-4">
                {% if post is defined and post.getImageUrl() != null %}
                    <img class="card-img-top" height="350" alt="{{ post.getImageUrl() }}" src="/image/{{ post.getImageUrl() }}" />
                {% endif %}
                <div class="card-body">
                    <h2 class="card-title">{{ post.getTitle() }}</h2>
                    <p class="card-text article-text">{{ post.getContent() | slice(0, 20) }} ...</p>
                    <a class="btn btn-primary" href="post/{{ post.getId() }}">Details</a>
                </div>
                <div class="card-footer text-muted">
                    {{ 'Posted on' |trans }} {{ post.getPublished() | date('d-m-Y h:i:s')}} {{ 'By' |trans }} {{ post.getAuthor() }}
                </div>
            </div>
        </div>
    {% endfor %}

    {% form_theme form 'form/field.html.twig' %}

    <h1 align="center">{{ 'Post creation' | trans }}</h1>

    {% block form_row %}
        {% spaceless %}
            <div class="container">
                <div class="form_row">
                    {{ form(form) }}
                </div>
            </div>
        {% endspaceless %}
    {% endblock form_row %}

    <hr>
    <div class="clearfix">
        <a class="btn btn-primary float-right" href="{{ path('homepage', {'page' :  page + 1} ) }} ">{{ 'Older Posts' | trans }}</a>
    </div>



    <hr>

    {% block javascripts %}
    {% endblock %}
{% endblock %}
